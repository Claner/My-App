<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ui.MainActivity">


    <com.example.ui.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/getHtml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getHtml"
            android:text="@string/getHtml_value"/>

        <Button
            android:id="@+id/postFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="postFile"
            android:text="Post File"/>

        <Button
            android:id="@+id/postString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="postString"
            android:text="Post String"/>

        <Button
            android:id="@+id/getHttpsHtml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getHttpsHtml"
            android:text="Get Https Html"/>

        <Button
            android:id="@+id/getUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getUser"
            android:text="Get User"/>

        <Button
            android:id="@+id/getUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getUsers"
            android:text="Get Users"/>

        <Button
            android:id="@+id/getImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getImage"
            android:text="Get Image"/>

        <Button
            android:id="@+id/uploadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="uploadFile"
            android:text="Upload File"/>

        <Button
            android:id="@+id/multiFileUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="multiFileUpload"
            android:text="Multi Upload Files"/>

        <Button
            android:id="@+id/downloadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="downloadFile"
            android:text="Download File"/>

        <Button
            android:id="@+id/otherRequestDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="otherRequestDemo"
            android:text="otherRequestDemo"/>

        <Button
            android:id="@+id/clearSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clearSession"
            android:text="clearSession"/>

    </com.example.ui.FlowLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
